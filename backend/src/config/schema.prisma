generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  minecraftUsername String  @unique
  email            String   @unique
  approved         Boolean  @default(false)
  admin            Admin    @relation("AdminToUser", fields: [adminId], references: [id])
  adminId          Int
}

model Admin {
  id      Int      @id @default(autoincrement())
  username String  @unique
  password String
  users   User[]   @relation("AdminToUser")
}
